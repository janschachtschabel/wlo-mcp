{
  "rewrites": [
    { "source": "/mcp", "destination": "/api/mcp" }
  ],
  "headers": [
    {
      "source": "/api/mcp",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, GET, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, mcp-session-id, Mcp-Session-Id, Authorization, X-Api-Key" },
        { "key": "Access-Control-Expose-Headers", "value": "Mcp-Session-Id" }
      ]
    }
  ]
}
